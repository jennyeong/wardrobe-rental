<div class="card-cloth d-flex flex-column">
  <%= link_to cloth_path(@cloth) do %>
    <%# <%= cl_image_tag @cloth.photos.first.key, :transformation => {:dpr => "auto", :responsive => true, :width => "auto", :crop => "limit"} %>
    <div class="card-image">
      <%= cl_image_tag @cloth.photos.first.key, :transformation => {:width => 400, :height => 400, :crop => "pad", :radius => 25} %>
    </div>
    <div class="card-cloth-info d-flex flex-column">
      <h2 id="cloth-title"><%= @cloth.title %> <%= content_tag(:span, "Rented",  class: "badge badge-pill badge-success") if @cloth.rented %></h2>
      <p id="cloth-description"><%= @cloth.description %></p>
      <div class="card-cloth-bookmark">
        <% if user_signed_in? %>
          <% bookmark = @cloth.bookmarks.find_by(user_id: current_user.id) %>
          <%= render partial: "cloths/bookmark_link", locals: {cloth: @cloth, bookmark: bookmark} %>
        <% else %>
          <%= link_to new_user_session_path do %>
            <i class="fa-regular fa-heart"></i>
          <% end %>
        <% end %>
      </div>
      <p id= "cloth-price">$<%= @cloth.price %>/day</p>
    </div>
  <% end %>
</div>
