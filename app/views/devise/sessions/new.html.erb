<div class="my-3 px-3 login-container">
  <div class="login d-flex justify-content-between">
    <div class="login-image w-50"></div>

    <div class="login-form w-50">
      <h1>Welcome back!</h1>
      <p>New clothes await you.</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn w-100"%>
        </div>
      <% end %>

      <div class="sign-up">
        <p>Don't have an account? <%= link_to "Sign up for free!",new_registration_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>
