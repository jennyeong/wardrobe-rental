<div class="my-3 px-3 login-container">
  <div class="login d-flex justify-content-between">
    <div class="login-image w-50"></div>

    <div class="container sign-up d-flex flex-column border my-3 w-25 border-dark rounded-lg">
      <h1 class="p-3 mb-3">Register</h1>
      <p class="px-3"><b>Starting renting your outfits today!</b><br>
      Your one stop rental platform.</p>
    <div class="sign-up-form p-3">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "username" }%>
          <%= f.input :first_name,
                      autofocus: true,
                      input_html: { autocomplete: "first_name" }%>
          <%= f.input :last_name,
                      autofocus: true,
                      input_html: { autocomplete: "last_name" }%>
          <%= f.input :phone_number,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "phone_number" }%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: 'Retype password',
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create Account", class: "btn btn-secondary w-100" %>
        </div>
    <% end %>
  </div>
  <div class="login px-3">
    <p class="border-top border-dark text-center pt-3">Already a user?<%= render "devise/shared/links" %></p>
  </div>
</div>
  </div>
</div>
