<h2>My renting requests</h2>

<ol>
  <% @rentee_bookings.each do |rentee_booking| %>
    <li><%= rentee_booking.cloth.title %> <%= rentee_booking.rent_duration %> days, $<%= rentee_booking.total_cost %>, Owner approved: <%= rentee_booking.rent_approved %>
      <%= link_to "Edit", edit_cloth_booking_path(rentee_booking.cloth, rentee_booking), class: "btn" if rentee_booking.rent_approved == false %>
      <%= link_to "Cancel",
                booking_path(rentee_booking),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn" if rentee_booking.rent_approved == false %>
    </li>
  <% end %>
</ol>

<br>

<h2>Received renting requests</h2>

<ol>
  <% @renter_bookings.each do |renter_booking| %>
    <li><%= renter_booking.cloth.title %> <%= renter_booking.rent_duration %> days, $<%= renter_booking.total_cost %>, Owner approved: <%= renter_booking.rent_approved %>
      <%= link_to "Approve", approve_cloth_booking_path(renter_booking.cloth, renter_booking), data: {turbo_method: :patch}, class: "btn" if renter_booking.rent_approved == false %>
      <%= link_to "Cancel",
                booking_path(renter_booking),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn" if renter_booking.rent_approved == false %>
    </li>
  <% end %>
</ol>
