<%= tag.div id: dom_id(@cloth), class: "bookmark-link-container" do %>
  <% if bookmark.nil? %>
    <%= link_to cloth_bookmarks_path(cloth_id: cloth.id), data: {turbo_method: :post} do %>
      <i class="fa-regular fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete} do %>
      <i class="fa-solid fa-heart" data-action="click->click#refresh"></i>
    <% end %>
  <% end %>
<% end %>
