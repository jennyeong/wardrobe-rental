<h1>Clothes</h1>

<% @cloths.each do |cloth| %>
  <ul>
    <li><%= cloth.title %></li>
    <li>$<%= cloth.price %></li>
    <li><%= cloth.description %></li>
    <li>Brand: <%= cloth.brand %></li>
    <li>Color: <%= cloth.color %></li>
  </ul>
<% end %>

<%= link_to "New cloth", new_cloth_path if policy(Cloth).new? %>
